<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDDFAD"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mImg"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="35dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/mTxtMain"
        app:layout_constraintEnd_toEndOf="@+id/mTxtMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bulls_car_logo" />

    <TextView
        android:id="@+id/mTxtMain"
        android:layout_width="211dp"
        android:layout_height="77dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/aladin"
        android:text="HELLO THERE ,  WELCOME"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/mMain"
        app:layout_constraintEnd_toEndOf="@+id/mMain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mImg" />

    <TextView
        android:id="@+id/mMain"
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="casual"
        android:text="SIGN IN TO CONTINUE"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mPlain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTxtMain" />

    <EditText
        android:textColorHint="#09221F"
        android:id="@+id/mPlain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Enter Full Name"
        android:inputType="text"
        android:textColor="#030520"
        app:layout_constraintBottom_toTopOf="@+id/mEmail"
        app:layout_constraintEnd_toEndOf="@+id/mEmail"
        app:layout_constraintStart_toStartOf="@+id/mEmail"
        app:layout_constraintTop_toBottomOf="@+id/mMain" />

    <EditText
        android:textColorHint="#09221F"
        android:id="@+id/mEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="#030520"
        app:layout_constraintBottom_toTopOf="@+id/mPass"
        app:layout_constraintEnd_toEndOf="@+id/mPass"
        app:layout_constraintStart_toStartOf="@+id/mPass"
        app:layout_constraintTop_toBottomOf="@+id/mPlain" />

    <EditText
        android:textColorHint="#09221F"
        android:id="@+id/mPass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#030520"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSign"
        app:layout_constraintStart_toStartOf="@+id/mBtnSign"
        app:layout_constraintTop_toBottomOf="@+id/mEmail" />

    <Button
        android:id="@+id/mBtnSign"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="21dp"
        android:backgroundTint="#0C24CF"
        android:text="SIGN IN"
        android:textColor="#DDDCBB"
        app:layout_constraintBottom_toTopOf="@+id/mVIEW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mPass" />

    <Button
        android:id="@+id/mBtnLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="#700735"
        android:text="LOGIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mVIEW" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/mVIEW"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif-light"
        android:text="If you have an account kindly login"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mBtnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnSign" />


</androidx.constraintlayout.widget.ConstraintLayout>









































































































































