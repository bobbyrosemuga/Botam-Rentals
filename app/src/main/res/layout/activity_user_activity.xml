<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:background="#DFEADF22">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="252dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        app:srcCompat="@drawable/bulls_car_logo" />

    <TextView
        android:id="@+id/ViewT"
        android:layout_width="362dp"
        android:layout_height="128dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/aladin"
        android:text=" BOOK  A   CAR   WITH   BOTAM   RENTALS"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/bTn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/bTn"
        android:layout_width="286dp"
        android:layout_height="87dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="164dp"
        android:backgroundTint="#1B5EAF"
        android:fontFamily="@font/aclonica"
        android:text="CHOOSE  A  CAR  "
        android:textColor="#132714"
        android:textColorHighlight="#A52929"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewT" />
</androidx.constraintlayout.widget.ConstraintLayout>